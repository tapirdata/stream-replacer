{
  "name": "stream-replacer",
  "version": "1.4.3",
  "description": "A through-stream that replaces by a RegExp and an async replace function",
  "main": "./lib",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build-lib": "tsc",
    "build": "npm run build-lib",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "prettify": "prettier -w src/**/*.ts test/**/*.ts",
    "test": "mocha --require ts-node/register --extension ts"
  },
  "keywords": [
    "stream",
    "through",
    "replace",
    "async"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/tapirdata/stream-replacer"
  },
  "author": {
    "name": "Andreas Riedl",
    "email": "office@tapirdata.com",
    "url": "https://github.com/tapirdata"
  },
  "license": "MIT",
  "dependencies": {
    "assert": "^2.0.0",
    "bl": "^6.0.1",
    "lodash": "^4.17.21",
    "vinyl": "^3.0.0"
  },
  "devDependencies": {
    "@types/bl": "^5.0.2",
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.14.194",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.1",
    "@types/vinyl": "^2.0.7",
    "@types/vinyl-fs": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "chai": "^4.3.7",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vinyl-fs": "^3.0.3",
    "vinyl-tapper": "^1.3.2"
