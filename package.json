{
  "name": "stream-replacer",
  "version": "1.4.1",
  "description": "A through-stream that replaces by a RegExp and an async replace function",
  "main": "./lib",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build-lib": "tsc",
    "build": "npm run build-lib",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "prettify": "prettier -w src/**/*.ts test/**/*.ts",
    "test": "mocha --require ts-node/register --extension ts"
  },
  "keywords": [
    "stream",
    "through",
    "replace",
    "async"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/tapirdata/stream-replacer"
  },
  "author": {
    "name": "Andreas Riedl",
    "email": "office@tapirdata.com",
    "url": "https://github.com/tapirdata"
  },
  "license": "MIT",
  "dependencies": {
    "assert": "^2.0.0",
    "bl": "^5.0.0",
    "lodash": "^4.17.21",
    "vinyl": "^2.2.1"
  },
  "devDependencies": {
    "@types/bl": "^5.0.2",
    "@types/chai": "^4.3.1",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.36",
    "@types/vinyl": "^2.0.6",
    "@types/vinyl-fs": "^2.4.12",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^10.0.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "vinyl-fs": "^3.0.3",
    "vinyl-tapper": "^1.3.0"
  }
